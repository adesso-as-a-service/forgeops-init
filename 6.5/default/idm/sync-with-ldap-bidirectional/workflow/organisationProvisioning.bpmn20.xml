    <scriptTask id="scripttask0" name="Get IHK Configuration" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>import org.slf4j.Logger
import org.slf4j.LoggerFactory
import com.fasterxml.jackson.databind.ObjectMapper

final Logger logger = LoggerFactory.getLogger("organisation.provisioning")
logger.info("Set IHK Configuration: {}", antragOrganisation["ihk"])

if (antragOrganisation["ihk"] != null) {
   def queryMap = ["_queryFilter" : "/ihkNumber eq \"" + antragOrganisation["ihk"] + "\""]
   def result = openidm.query("managed/IhkConfiguration", queryMap)
   if (result["result"].size() &gt; 0) {
	  execution.setVariable("ihkConfiguration", result["result"].get(0))
   }
}

logger.info("Successfully setting IHK Configuration: {}", antragOrganisation["ihk"])   </script>
    </scriptTask>
